<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appspot.glancesocial.glance" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name=".InstagramService" />

        <!-- LoginPage -->
        <activity
            android:name=".LoginPage"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- InstaWebViewActivity -->
        <activity
            android:name=".InstaWebViewActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar"/>

        <!-- TwitterActivity -->
        <activity
            android:name=".TwitterActivity"/>

        <!-- MainPage -->
        <activity
            android:name=".MainPage"
            android:label="@string/app_name"/>

        <!-- SettingsActivity -->
        <activity
            android:name=".SettingsActivity"
            android:parentActivityName=".MainPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appspot.glancesocial.glance.SettingsActivity"/>
        </activity>

        <!-- AccountActivity -->
        <activity
            android:name=".AccountActivity"
            android:parentActivityName=".SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appspot.glancesocial.glance.SettingsActivity"/>
        </activity>

        <!--Meta Data for Fabric API (Twitter)-->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="405c243a6b84b90e237341477a4fdd8425b5c233" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
