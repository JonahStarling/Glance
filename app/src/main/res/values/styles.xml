<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style
        name="glance_theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorAccent">@color/deep_purple</item>
        <item name="actionBarStyle">@style/glance_action_bar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="glance_action_bar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="background">@color/blue</item>
        <item name="title">@string/app_name</item>
        <item name="displayOptions">showTitle</item>
    </style>

</resources>
